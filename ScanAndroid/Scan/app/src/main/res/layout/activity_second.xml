                    android:ems="10"
                    android:inputType="textPersonName" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TVSite1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сайт" />

                <EditText
                    android:id="@+id/ETSite1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/BAddSite"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="+" />

                <Button
                    android:id="@+id/BDelSite"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="-" />
            </TableRow>

            <TableRow
                android:id="@+id/TRSite2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TVSite2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сайт" />

                <EditText
                    android:id="@+id/ETSite2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </TableRow>

            <TableRow
                android:id="@+id/TRSite3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TVSite3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сайт" />

                <EditText
                    android:id="@+id/ETSite3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>